{
  "name": "personal-website",
  "version": "3.2.0",
  "description": "Ricardo's Personal Website",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx vuepress dev src",
    "build": "npx vuepress build src",
    "deploy": "rsync -ru dist/. ricardobalk.nl:/var/www/ricardobalk.nl --delete",
    "build:deploy": "npm run build && npm run deploy",
    "reset": "rm -rf node_modules/ dist/ && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricardobalk/www.git"
  },
  "keywords": [
    "personal",
    "website",
    "website",
    "blog",
    "portfolio",
    "vue",
    "vuepress",
    "markdown"
  ],
  "author": "Ricardo Balk",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ricardobalk/www/issues"
  },
  "homepage": "https://github.com/ricardobalk/www#readme",
  "devDependencies": {
    "fibers": "^5.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.14.0",
    "prettier": "1.19.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.0",
    "vue-inline-svg": "^1.2.0",
    "vuepress": "^1.2.0",
    "vuepress-plugin-container": "^2.1.3",
    "vuepress-plugin-disqus": "^0.2.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-brands-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/vue-fontawesome": "^0.1.8",
    "foundation-sites": "^6.6.0",
    "jquery": "^3.4.1",
    "moment": "^2.24.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,scss,json,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
