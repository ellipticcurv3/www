@require './config'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'

html, body
  margin 0
  padding 0

body
  color $textColor
  font-size 16px
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  @media screen and (prefers-color-scheme dark)
    color $textColorDarkmode

.page
  padding-left $sidebarWidth

.sidebar-mask
  position fixed
  top 0
  left 0
  z-index 9
  display none
  width 100vw
  height 100vh

.sidebar
  position fixed
  top $navbarHeight
  bottom 0
  left 0
  z-index 10
  overflow-y auto
  box-sizing border-box
  margin 0
  width $sidebarWidth
  border-right 1px solid $borderColor
  background-color #fff
  font-size 16px

  @media screen and (prefers-color-scheme dark)
    border-color #444
    background-color rgba(0, 0, 0, 0.8)

    .nav-links
      border-bottom none

@media screen and (prefers-color-scheme dark)
  .navbar
    .sidebar-button
      .icon
        color #fff

  .sidebar-open
    main
      filter brightness(80%) blur(6px)

{$contentClass}:not(.custom)
  @extend $wrapper

  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  margin 0
  padding 0

  img
    max-width 100%

a
  color $accentColor
  text-decoration none
  font-weight 500

  @media screen and (prefers-color-scheme dark)
    color $accentColorDarkmode

p a code
  color $accentColor
  font-weight 400

kbd
  padding 0 0.15em
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  background #eee

blockquote
  margin 1rem 0
  padding 0.25rem 0 0.25rem 1rem
  border-left 0.2rem solid #dfe2e5
  color #999
  font-size 1rem

  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25

  {$contentClass}:not(.custom) > &
    margin-top 0.5rem - $navbarHeight
    margin-bottom 0
    padding-top: ($navbarHeight + 1rem)

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  &:hover .header-anchor
    opacity 1

h1
  font-size 2.2rem

h2
  padding-bottom 0.3rem
  font-size 1.65rem
  // border-bottom 1px solid $borderColor

h3
  font-size 1.35rem

a.header-anchor
  float left
  margin-top 0.125em
  margin-left -0.87em
  padding-right 0.23em
  font-size 0.85em
  opacity 0

  &:hover
    text-decoration none

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace

p, ul, ol
  line-height 1.7

hr
  margin 2em 0
  border 0
  border-top 1px solid $borderColor

  @media screen and (prefers-color-scheme dark)
    border-top 1px solid #434343

table
  display block
  overflow-x auto
  margin 1rem 0
  border-collapse collapse

tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  padding 0.6em 1em
  border 1px solid #dfe2e5

.global-layout
  &.sidebar-open
    .sidebar-mask
      display block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0

@media (min-width ($MQMobile + 1px))
  .global-layout.no-sidebar
    .sidebar
      display none

    .page
      padding-left 0

@require 'mobile.styl'
