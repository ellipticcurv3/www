@import 'oswald/oswald.css'
@import 'source-sans/source-sans-pro.css'
@require '../_variables'

for num in 1 .. 6
  h{num}
    margin-bottom 0
    font-family $font-stack-headings

for num in 2 .. 6
  h{num}
    font-weight 600

h1
  font-weight 500
  font-size 2em

h2
  border-bottom none
  font-size 1.5em

h3
  font-size 1.3em

h4
  font-size 1.25em

h5
  font-size 1.15em

h6
  font-size 1em

p
  font-weight 500
  font-family $font-stack-text
  line-height 1.5