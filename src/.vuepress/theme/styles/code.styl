{$contentClass}
  code
    margin 0
    padding 0.25rem 0.5rem
    border-radius 3px
    background-color rgba(27, 31, 35, 0.05)
    color lighten($textColor, 20%)
    font-weight 600
    font-size 0.85em

    @media screen and (prefers-color-scheme dark)
      color #7ec699

    .token
      &.deleted
        color #EC5975

      &.inserted
        color $accentColor

{$contentClass}
  pre, pre[class*='language-']
    overflow auto
    margin 0.85rem 0
    padding 1.25rem 1.5rem
    border-radius 6px
    background-color $codeBgColor
    line-height 1.4

    code
      padding 0
      border none
      border-radius 0
      background-color transparent
      color #fff

div[class*='language-']
  position relative
  border-radius 6px
  background-color $codeBgColor

  .highlight-lines
    position absolute
    top 0
    left 0
    padding-top 1.3rem
    width 100%
    line-height 1.4
    user-select none

    .highlighted
      background-color rgba(0, 0, 0, 66%)

  pre, pre[class*='language-']
    position relative
    z-index 1
    background transparent

  &::before
    position absolute
    top 0.8em
    right 1em
    z-index 3
    color rgba(255, 255, 255, 0.4)
    font-size 0.75rem

  &:not(.line-numbers-mode)
    .line-numbers-wrapper
      display none

  &.line-numbers-mode
    .highlight-lines .highlighted
      position relative

      &:before
        position absolute
        top 0
        left 0
        z-index 3
        display block
        width $lineNumbersWrapperWidth
        height 100%
        background-color rgba(0, 0, 0, 66%)
        content ' '

    pre
      padding-left: ($lineNumbersWrapperWidth + 1) rem
      vertical-align middle

    .line-numbers-wrapper
      position absolute
      top 0
      padding 1.25rem 0
      width $lineNumbersWrapperWidth
      color rgba(255, 255, 255, 0.3)
      text-align center
      line-height 1.4

      br
        user-select none

      .line-number
        position relative
        z-index 4
        font-size 0.85em
        user-select none

    &::after
      position absolute
      top 0
      left 0
      z-index 2
      width $lineNumbersWrapperWidth
      height 100%
      border-right 1px solid rgba(0, 0, 0, 66%)
      border-radius 6px 0 0 6px
      background-color $codeBgColor
      content ''

for lang in $codeLang
  div{'[class~="language-' + lang + '"]'}
    &:before
      content '' + lang

div[class~='language-javascript']
  &:before
    content 'js'

div[class~='language-typescript']
  &:before
    content 'ts'

div[class~='language-markup']
  &:before
    content 'html'

div[class~='language-markdown']
  &:before
    content 'md'

div[class~='language-json']:before
  content 'json'

div[class~='language-ruby']:before
  content 'rb'

div[class~='language-python']:before
  content 'py'

div[class~='language-bash']:before
  content 'sh'

div[class~='language-php']:before
  content 'php'

@import '~prismjs/themes/prism-tomorrow.css'
