  .service {
    text-align: center;
  }

  .service .inner {
    margin: 1em;
    padding: 2em;
    border: 1px solid #eee;
    background-color: #fff;
    box-shadow: 3px 3px 9px rgba(0, 0, 0, 0.05);
  }

  .icon-container {
    width: 75px;
    height: 75px;
    border-radius: 50px;
    margin: 0 auto 1em;
    background-color: #efefef;
    display: flex;
    align-items: center;
  }

  .icon-container .icon {
    font-size: 35px;
    text-align: center;
    line-height: 75px;
    display: block;
    margin: 0 auto;
  }